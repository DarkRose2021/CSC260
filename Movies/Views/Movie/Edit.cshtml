@model Movie

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Movie</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for="title"></label>
			<input asp-for="title" class="form-control" type="text" required />
		</div>
		<div class="mb-3">
			<label asp-for="year"></label>
			<input asp-for="year" class="form-control" type="number" required />
		</div>
		<div class="mb-3">
			<label asp-for="rating"></label>
			<input asp-for="rating" class="form-control" required />
		</div>

		<button type="submit" class="btn btn-primary">
			<i class="bi bi-save-fill"></i> Update
		</button>
		<a asp-controller="Movie" asp-action="MultiMovies" class="btn btn-secondary p-2 mx-2">Back to Movies</a>
	</div>
</form>