@model Movie;

@if (Model == null)
{
	<h2>No Movies</h2>
}
else
{
	<h3>@Model.title</h3>
	<h3>@Model.year</h3>
	<h3>@Model.rating</h3>
	<a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
		<i class="bi bi-pencil-fill"></i> 
		Edit
	</a>
	<a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary mx-2">Delete</a>
}
