@model IEnumerable<Games>

<h1>Game Collection</h1>
<div>
    <div>
        @if (Model == null)
{
	    <h2>No Games</h2>
}
    else
{
        @foreach (Games games in Model)
        {
            <h2>@games.Title</h2>
            <div>
                <img src="~/assets/@games.Image"> <br>
                <p>@games.Genre</p>
                <p>@games.Rating</p>
                    @if (games.IsLoaned != false)
                    {
                        <p>Loaned to @games.LoanedTo on @games.LoanedDate</p>
                    }
                    else
                    {
                        <form >
                            <input type="text" required>
                            <button type="submit">Loan</button>
                        </form>
                    }
                </div>
        }
}
        
    </div>
</div>