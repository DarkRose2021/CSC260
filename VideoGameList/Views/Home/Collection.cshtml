@model IEnumerable<Games>

<h1>Game Collection</h1>
<div>
    <div>
        @foreach (Games games in Model)
        {
            <h2>@games.Title</h2>
            <div>
                <img src="~/assets/@games.Image" width="400px"> <br>
                <p class="p">Platforms: @games.Platform</p>
                <p class="g">Genre: @games.Genre</p>
                <p class="r">ESRB Rating: @games.Rating</p>
                    @if (games.IsLoaned != false)
                    {
                        <p>Loaned to @games.LoanedTo on @games.LoanedDate</p>
                    }
                    else
                    {
                        <form asp-action="" asp-controller="">
                            <input type="text" required>
                            <button type="submit">Loan</button>
                        </form>
                    }
                </div>
        }
}
        
    </div>
</div>